{
  "name": "musubii-monorepo",
  "version": "9.3.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "docs",
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "docs": "minista ./docs --host",
    "docs-build": "minista build ./docs && vite build ./playground/_default --base=/demo/ --outDir=../../docs/dist/demo",
    "docs-preview": "minista preview ./docs",
    "build": "run-p build:*",
    "build:main": "cd ./packages/musubii && npm run build",
    "mix": "node ./scripts/color-mix.js",
    "play": "vite dev ./playground/_default --host",
    "play-build": "vite build ./playground/_default",
    "play-preview": "vite preview ./playground/_default --host",
    "up": "npx npm-check-updates --deep",
    "up:u": "npx npm-check-updates --deep -u",
    "rev": "npx npm-replace-versions",
    "release": "run-s release:*",
    "release:main": "cd ./packages/musubii && npm publish"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "clsx": "^2.1.1",
    "esbuild": "^0.25.11",
    "minista": "^4.0.0-alpha.17",
    "npm-run-all2": "^8.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "rolldown-vite": "^7.1.19",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@latest"
  }
}
